        flex: 1;
      }

      .checkbox-group {
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 20px 0;
      }

      .submit-btn {
        background-color: var(--primary);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
      }

      .submit-btn:hover {
        background-color: #6d1730;
      }

